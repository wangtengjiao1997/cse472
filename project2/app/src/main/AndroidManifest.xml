<?xml version="1.0" encoding="utf-8"?>
<!--suppress CheckTagEmptyBody -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="imjames.msu.edu">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher_steam"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_steam_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SteamActivity" />
        <activity android:name=".WaitingActivity" />
        <activity android:name=".WinnerActivity" />
        <activity android:name=".NewUserActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>